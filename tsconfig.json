{
   "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "sourceMap": true,
      "rootDir": "src",
      "declaration": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "noEmit": false,
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "lib": [
         "dom",
         "esnext",
         "es5"
      ],
      "paths": {
         "*": [
            "node_modules/*",
            "src/types/*"
         ]
      },
      "types": [
         "jest"
      ]
   },
   "exclude": [
      "jest",
      "node_modules",
      "tests",
      "dist",
      "example",
      "doc"
   ]
}